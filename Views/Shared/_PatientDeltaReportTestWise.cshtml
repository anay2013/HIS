<style>
    .panelControl {
        background: #f5f5f5;
        line-height: 0;
        padding: 3px;
        border: 1px solid #ddd;
        border-radius: 2px;
        margin: 4px 0px;
    }

    #deltaReport {
        margin-bottom: 10px;
        height: 150px;
        width: 615px;
        overflow: auto;
        border: 1px solid #edd0af;
    }

    .labelGroup {
        margin-top: 5px;
        width: 100%;
        background: #fbeedf;
        padding: 2px 5px;
        border-radius: 2px;
    }

    .reportRound {
        display: inline-block;
        margin: 2px;
        width: 60px;
        height: 60px;
        background: #fff;
        border-radius: 60px;
        text-align: center;
        padding: 12px 0px;
        font-size: 10.5px;
        font-weight: 700;
    }

    .highReading {
        border: 4px double #c75151;
    }

    .lowReading {
        border: 4px double #c79851;
    }

    .normalReading {
        border: 4px double #619957;
    }

    .reportRound hr {
        margin: 0;
    }

    canvas {
        width: 100% !important;
        height: 140px !important;
    }

    .flex {
        margin: 0;
        display: flex;
        align-items: baseline;
    }

    .select2-container .select2-selection--single {
        position: relative;
        box-sizing: border-box;
        cursor: pointer;
        display: block;
        height: 28px;
        user-select: none;
        -webkit-user-select: none;
    }

    #tblReportSummary th, #tblReportSummary tr:not(.group) td {
        text-align: center;
        padding: 1px;
    }

    .group {
        background: #fbe9df;
    }

    #tblReportSummary th {
        background: #d9d9d9;
        color: #626261;
        padding: 5px;
    }
    #TestReport iframe {
        width: 100%;
        height: 470px;
        border: none;
    }
</style>
<script src="~/JsModule/_PatientDeltaReportTestWise.js"></script>
<script src="~/JsModule/mdb.min.js?his-version-1.0"></script>
<div class="col-md-4">
    <div class="row panelControl">
        <div class="col-md-5">
            <input type="date" id="txtFrom" class="form-control" />
        </div>
        <div class="col-md-7">
            <label class="flex">              
                <input type="date" id="txtTo" class="form-control" />
                <button style="width:45%;margin-left: 5px;" onclick="PatientTestInfo()" class="btn btn-warning"><i class="fa fa-sign-in">&nbsp;</i>Get</button>
            </label>
        </div>
    </div>
    <div class="table table-responsive" style="height:455px;border:1px solid #2478a9;overflow:auto">
        <table class="table table-bordered" id="tblTestInfo">
            <thead>
                <tr>
                    <th>Test Name</th>
                    <th>Type</th>
                    <th>T. Count</th>
                    <th>CMD</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
<div class="col-md-8" id="reportSummary">
    <div style="border: 1px solid #ddd;">
        <ul class="nav nav-tabs" style="background:#f3efef">
            <li class="active"><a style="padding: 8px !important;" data-toggle="tab" href="#DigitalReport"><i class="fa fa-clock-o">&nbsp;</i>Digital Report</a></li>
            <li><a data-toggle="tab" style="padding: 8px !important;" href="#TestReport"><i class="fa fa-eye">&nbsp;</i>Test Report </a></li>
        </ul>

        <div class="tab-content">
            <div id="DigitalReport" class="tab-pane fade in active" style="padding:5px">
                <div id="deltaReport">
                    <div class='divChartTemp'>
                        <canvas id='chartDelta'></canvas>
                    </div>
                </div>
                <table class="table table-condensed" id="tblReportSummary">
                    <thead style="background: #00a65a;color: #fff;">
                        <tr>
                            <th>#</th>
                            <th>Reg Date</th>
                            <th>Reading</th>
                            <th>Min</th>
                            <th>Max</th>
                            <th>Ref Range</th>
                        </tr>
                    </thead>    
                    <tbody></tbody>
                </table>
            </div>

            <div id="TestReport" class="tab-pane fade">
                <div class="row">
                    <div class="col-md-12">
                        <iframe src="https://www.rd.usda.gov/sites/default/files/pdf-sample_0.pdf"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>