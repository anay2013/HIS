	<style>
        .button-loading {
            border-width: 2px;
            border-image: url(/images/loading.gif) 60;
            pointer-events: none;
        }

        table {
            overflow-y: auto;
        }

            table thead th {
                position: sticky;
                top: 0;
            }

        .sidebar-submenu {
            display: block !important;
        }

        #ajaxLoading {
            z-index: 1;
            position: absolute;
