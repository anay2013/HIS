
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="~/Areas/OPD/JsModule/PatientRagistrationKiosk.js?v1.1"></script>
    <script src="~/JsModule/global.js"></script>
    <style>
        #txtMobilNo, #txtOTP {
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
            border-color: #ffc107;
        }
        .lock{
            pointer-events:none;
            opacity:0.5;
        }
       #tblPatientInfo th {
            background:#009fff;
            color:#fff;
        }
        .modal-header {
            color: #fff;
            background: #009fff;
            padding: 6px 10px;
            border-bottom: 1px solid #e5e5e5;
        }
        .modal-body {
            position: relative;
            padding: 5px;
        }
        #tblPatientInfo td, #tblPatientInfo th{
            white-space:pre;
        }
        #btnSendOTP, #btnValidateOTP {
            width: 172px;
            border-radius: 0;
            margin: 0;
            color: #fff;
        }

        .tite {
            font-size: 18px;
            color: #fff;
            margin: 0;
            padding: 10px;
            text-align: center;
            background: #009fff;
        }

        .form-group {
            color: #8a6d3b;
            margin-bottom: 7px;
        }

        label {
            color: #8a6d3b;
        }

        body {
            background: #ddd;
        }

        .row {
            background: #fffcf4;
            padding: 1px 1px 10px 1px;
            border: 1px solid #009fff;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <h3 class="tite"><i class="fa fa-user-circle-o">&nbsp;</i>Patient Registration</h3>
            <div class="col-xs-12 form-group">
                <label>Mobile No</label>
                <div style="display:flex">
                    <input type="text" id="txtMobileNo" class="form-control" placeholder="Mobile No" />
                    <button id="btnSendOTP" onclick="SendOTP()" class="btn btn-warning">Get OTP</button>
                    <input type="text" id="txtOTP" class="form-control" placeholder="OTP" style="margin-left:3px;width:78px;border-color: #28a745;" />
                    <button id="btnValidateOTP" onclick="AuthenticateOTP()" class="btn btn-success" style="width:60px;"><i class="fa fa-check-circle">&nbsp;</i></button>
                </div>
            </div>
            <div class="info lock">
                <div class="col-md-6 col-xs-6">
                    <label>First Name</label>
                    <input type="text" id="txtFirstName" class="form-control" />
                </div>
                <div class="col-md-6 col-xs-6 form-group">
                    <label>Last Name</label>
                    <input type="text" id="txtLastName" class="form-control" />
                </div>
                <div class="col-md-6 col-xs-6">
                    <label>Gender</label>
                    <select id="ddlGender" class="form-control">
                        <option>Select</option>
                        <option>Male</option>
                        <option>Female</option>
                    </select>
                </div>
                <div class="col-md-6 col-xs-6 form-group">
                    <label>DOB</label>
                    <input type="date" id="txtDOB" class="form-control" />
                </div>
                <div class="col-md-6 col-xs-6" style="pointer-events:none;opacity:0.5">
                    <label>--</label>
                    <input type="text" id="txtAge" class="form-control" />
                </div>
                <div class="col-md-6 col-xs-6 form-group">
                    <label>Email</label>
                    <input type="text" id="txtEmail" class="form-control" />
                </div>
                <div class="col-md-6 col-xs-6">
                    <label>State</label>
                    <select id="ddlState" onchange="GetCityByState()" class="form-control">
                        <option>Select</option>
                    </select>
                </div>
                <div class="col-md-6 col-xs-6 form-group">
                    <label>City</label>
                    <select id="ddlCity" class="form-control">
                        <option>Select</option>
                    </select>
                </div>
                <div class="col-md-12 col-xs-12 form-group">
                    <label>Address</label>
                    <input type="text" id="txtAddress" style="height:60px;" class="form-control" />
                </div>
                <div class="col-md-12 col-xs-12 text-center">
                    <button class="btn btn-success" onclick="Insert()" id="btnSubmit"><i class="fa fa-sign-in">&nbsp;</i>Register Now</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modalPatientInfo" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Patient Info</h4>
                </div>
                <div class="modal-body">
                    <div class="scroll" style="max-height:300px;  display:block; border:1px solid #009fff; overflow:auto;padding-bottom:7px;">
                        <table class="table table-bordered" id="tblPatientInfo">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>UHID</th>                                    
                                    <th>Patient Name</th>
                                    <th>Gender</th>
                                    <th>DOB</th>                                                                 
                                    <th>Address</th>                                    
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>             
            </div>

        </div>
    </div>
</body>
</html>

