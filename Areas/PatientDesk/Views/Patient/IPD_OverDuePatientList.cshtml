
@{
    ViewBag.Title = "IPD_OverDuePatientList";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/PatientDesk/JsModule/IPD_OverDuePatientList.js"></script>
<style>
    .box-header {
        padding: 0 17px !important;
    }

    .box-body {
        padding: 2px 10px;
    }





    .flex {
        display: flex !important;
        align-items: center;
    }

    hr {
        margin-top: 35px;
        margin-bottom: 5px;
        border: 0;
        border-top: 1px solid #eee;
    }

    .fileinput.input-group {
        display: flex;
    }

    .text-17 {
        font-size: 17px;
    }

    .panel-body {
        /*box-shadow: 1px 1px 10px #d2d2d2;*/
        border-radius: 10px;
        padding: 5px 3px 0px 3px;
        position: relative;
    }

    .ml15 {
        margin-left: 15px;
    }

    #tblReport tbody td {
        padding: 5px;
    }

    .panel-heading {
        padding: 1px 5px;
    }
</style>

<div id="page-content">
    <div class="container">
        <div class="ml15">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h5> Call OverDue Patient</h5>
                </div>
            </div>
            <div class="panel panel-primary" style="margin-top:-20px">
                <div class="panel-body">
                    <div class="row" style="background-color:#f5dbdf;margin-left: 0px;margin-right: 0px;height:70px;padding:7px;">
                        <div class="col-md-2">
                            <label>Floor Name</label>
                            <select id="ddlFloor" class="form-control"></select>
                        </div>

                        <div class="col-md-3">
                            <label>Doctor</label>
                            <div style="display:flex">
                                <div style="width:310px">
                                    <select id="ddlDoctor" class="form-control"></select>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <label>Panel Name </label>
                            <div style="display:flex">
                                <div style="width:450px">
                                    <select id="ddlPanel" class="form-control"></select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2" style="margin-top:24px;">
                            <div style="display:flex">
                                <button id="btnAll" style="width:50%;height:27px" onclick="OverDuePatientList()" class="btn btn-success"><i class="fa fa fa-sign-in">&nbsp;Search</i></button>
                                <button id="btnExecl" style="width:50%;height:27px" onclick="ExcelOverPatient()" class="btn btn-warning"><i class="fa fa fa-file-excel-o">&nbsp;Execl</i></button>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive" style="height:450px;overflow-y:auto;border:1px solid #3498db;margin-top:5px;">
                                <table id="tblPatientList" class="table table-bordered ">
                                    <thead>
                                        <tr>
                                            <th style="width:2%;text-align:left">SN</th>
                                            <th style="width:3%;text-align:center">Cmd</th>
                                            <th style="width:4%;text-align:left">IPDNo</th>
                                            <th style="width:14%;text-align:left">Patient Name</th>
                                            <th style="width:5%;text-align:left">Mobile</th>
                                            <th style="width:12%;text-align:left">DoctorName</th>
                                            <th style="width:8%;text-align:left">Room Category</th>
                                            <th style="width:5%;text-align:right">Deposit</th>
                                            <th style="width:5%;text-align:right">Bill.Amt</th>
                                            <th style="width:5%;text-align:right">Pymt.Status</th>
                                            <th style="width:5%;text-align:right">Alert.Amt</th>
                                            <th style="width:5%;text-align:right">Repeat.Call</th>
                                            <th style="width:3%;text-align:center">Save</th>
                                            <th style="width:10%;text-align:center">Last Call</th>
                                            <th style="width:15%;text-align:left;">Panel Name</th>
                                            <th style="width:0%;text-align:left;display:none;">Admi tDate</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <span style="text-align:center;width:100%" id="elDoctorName"></span>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <table id="tblBookingDetail" class="table table-bordered">
                            <thead>
                                <tr>
                                    <td colspan="2" id="pInfo"></td>
                                </tr>
                                <tr>
                                    <td>Remark</td>
                                    <td><textarea id="txtRemark" class="form-control"> </textarea></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td> <button id="btnSave" type="button" class="btn btn-success btn-block" onclick="CallOverDueInsertUpdate()">Complete Call</button></td>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
                <div class="modal-body">
                    <table id="tblCallLog" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>S.N.</th>
                                <th>Date</th>
                                <th>Remark</th>
                                <th>Call By</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

</div>

