
@{
    ViewBag.Title = "SurgeryReport";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/OT/JsModule/SurgeryReport.js"></script>
<style>
    .panel {
        margin-bottom: 2px !important;
        margin-left: 2px !important;
    }

    .panel-heading {
        padding: 1px 5px;
    }

    .panel-body {
        padding: 2px 1px;
        margin-top: 1px;
    }

    .selected {
        background-color: #3498db;
        color: #fff;
    }

    .bn {
        margin: 0px;
        font-size: 10pt;
        padding: 0px 12px;
        border-radius: 0;
        width: 38%;
        height: 28px;
    }

    .btn-add {
        border: none;
        padding: 6px;
        margin-left: 1px;
    }

    .btn {
        border: none;
        padding: 1px 9px;
        font-size: 13px;
        margin-bottom: 2px;
    }

    #tblReport thead th {
        padding: 4px;
    }
</style>
<div id="page-content">
    <div class="col-lg-12">
        <div class="row">
            <div class="ml15">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h5>Surgery Report</h5>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-2">
                                <label> From</label>
                                <div style="display:flex">
                                    <input type="date" id="txtfromdate" class="form-control" />
                                </div>

                            </div>
                            <div class="col-md-4">
                                <label> To</label>
                                <div style="display:flex">
                                    <input type="date" id="txttodate" class="form-control" />
                                    <button class="btn btn-success bn" id="btnget" onclick="GetDataAllList()"><i class="fa fa-search"></i>&nbsp;Get</button>
                                    <button class="btn btn-warning bn" style="margin-left:20px" id="btnexecl" onclick="GetExecl()"><i class="fa fa-file-excel-o"></i>&nbsp;Excel</button>
                                </div>

                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="table-responsive" style="height:450px;overflow-y:auto;border:1px solid #3498db;margin-top: 4px;">
                                    <table class="table table-bordered" id="tblReport">
                                        <thead>
                                            <tr>
                                                <th style='width:3%;text-align:center'>S.NO</th>
                                                <th style='width:7%;text-align:center'>UHID</th>
                                                <th style='width:7%;text-align:center'>IPD NO</th>
                                                <th style='width:13%'><input id="txtPatientName" placeholder="Patient Name" class="form-control" style="height: 20px;" /></th>
                                                <th style='width:13%'>Date Of Surgery(DOS)</th>
                                                <th style='width:13%'>Surgeon Name</th>
                                                <th style='width:13%'>SecondSurgeon Name</th>
                                                <th style='width:13%'>Aneasthetic Consultant</th>
                                                <th style='width:13%'>Name Of Surgery</th>
                                                <th style='width:9%;text-align:center'>Amount</th>

                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

