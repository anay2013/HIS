
@{
    ViewBag.Title = "Document";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/ApplicationResource/JsModule/Document.js?1.1"></script>
<style>
    #selectedForm {
        background: #ddd;
        border-radius: 3px;
        padding: 5px;
        margin: -6px 0 10px 10px;
    }

    .btn-add {
        border: none;
        padding: 6px;
        margin-left: 1px;
    }

    .btn-tbl {
        border: none;
        padding: 1px 9px;
        font-size: 13px;
        margin-bottom: 2px;
    }

    .flex {
        display: flex !important;
        align-items: center;
    }

    hr {
        margin-top: 35px;
        margin-bottom: 5px;
        border: 0;
        border-top: 1px solid #eee;
    }

    .custom-table {
        width: 100%;
        line-height: 29px;
        font-size: 12px;
    }

    .fileinput.input-group {
        display: flex;
    }

    .text-17 {
        font-size: 17px;
    }

    .btn-flat {
        padding: 2px;
        border: none;
    }

    .scroll {
        width: 100%;
        background: #fff;
        overflow: overlay;
        max-height: 450px;
        display: block;
    }

    .panel-body {
        /*box-shadow: 1px 1px 10px #d2d2d2;*/
        border-radius: 10px;
        padding: 5px 3px 0px 3px;
        position: relative;
    }

    .note {
        list-style: disc;
        color: red;
        font-size: 11px;
        font-weight: bold;
        background: #f7f7f7;
        border: 1px solid #d86c6c;
    }

    .bn {
        margin: 0px;
        font-size: 10pt;
        padding: 0px 10px;
        border-radius: 0;
        text-align: left;
        height: 30px;
    }

    .bc {
        border: 1px solid #00a65a;
        border-radius: 0;
    }
</style>
<div id="page-content">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <div class="ml151">
                    <div class="panel">
                        <div class="panel-heading" style="background:#0076d0;padding: 4px;">
                            <h4 class="text-white">Document Master</h4>
                        </div>
                        <div class="panel-body" style="padding:10px">
                            <div class="row">
                                <div class="col-md-8 form-group">
                                    <div class="flex">
                                        <label style="white-space:pre">Document Type : </label>
                                        <select id="ddlDocumentType" class="form-control">
                                            <option value="Manual">Manual</option>
                                            <option value="SOP">SOP</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-12 form-group">
                                    <div class="flex">
                                        <label style="white-space:pre;">Document Name: </label>
                                        <input type="text" id="txtDocumentName" class="form-control" placeholder="Name of Document" />
                                    </div>
                                </div>
                                <div class="col-md-12 form-group">
                                    <textarea id="txtDescription" class="form-control" placeholder="Description.."></textarea>
                                </div>
                                <div class="col-md-4 form-group">
                                    <div class="flex">
                                        <label style="white-space:pre">Location : </label>
                                        <select id="ddlDocumentLocation" class="form-control">
                                            <option value="Cloud">Cloud</option>
                                            <option value="Local">Local</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-8 form-group">
                                    <div class="flex">
                                        <input type="file" class="form-control" id="uploadFile" onchange="readURL(this)" style="margin-left:10px;" />
                                        <img src="" id="imgFile" style="display:none;" />
                                        <button id="btnSave" style="margin:0;border-radius:0;height:28px;width:25%" onclick="UploadFile(this)" class="btn btn-success pull-right">Upload</button>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="scroll" style="height:270px;max-height:270px;overflow:auto;border:1px solid #2492b3">
                                        <table id="tblDocMaster" class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th style="width:1%">#</th>
                                                    <th>Document Name</th>
                                                    <th style="width:20%">Location</th>
                                                    <th style="width:1%">CMD</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


