                    <li><a href="#" onclick="loadBody('ABHA_Registration_Aadhar')">Using Aadhar</a></li>
                    <li><a href="#" onclick="loadBody('ABHA_Registration_Mobile')">Using Mobile</a></li>
                </ul>
                <label class="bg-custom tittle">Delete</label>
                <ul class="menubar">
                    <li><a href="#" onclick="loadBody('ABHA_Delete_Aadhar')">Using Aadhar</a></li>
                    <li><a href="#" onclick="loadBody('ABHA_Delete_Mobile')">Using Mobile</a></li>
                </ul>
                <label class="bg-custom tittle">Reactivate</label>
                <ul class="menubar">
                    <li><a href="#" onclick="loadBody('ABHA_Reactivate_Aadhar')">Using Aadhar</a></li>
                    <li><a href="#" onclick="loadBody('ABHA_Reactivate_Mobile')">Using Mobile</a></li>
                </ul>
                <label class="bg-custom tittle">Deactivate</label>
                <ul class="menubar">
                    <li><a href="#" onclick="loadBody('ABHA_Deactivate_Aadhar')">Using Aadhar</a></li>
                    <li><a href="#" onclick="loadBody('ABHA_Deactivate_Mobile')">Using Mobile</a></li>
                </ul>
                <label class="bg-custom tittle">Update Password</label>
                <ul class="menubar">
                    <li><a href="#" onclick="loadBody('ABHA_UpdatePassword_Aadhar')">Using Aadhar</a></li>
                    <li><a href="#" onclick="loadBody('ABHA_UpdatePassword_Mobile')">Using Mobile</a></li>
                </ul>
                <label class="bg-custom tittle">Anonymous</label>
                <ul class="menubar">
                    <li><a href="#" onclick="loadBody('ABHA_Anonymous')">Anonymous</a></li>
                </ul>
            </div>
            <div class="col-md-8 rightPanel">
