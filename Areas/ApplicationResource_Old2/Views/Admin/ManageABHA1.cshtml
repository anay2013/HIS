            background: #fff2de;
            margin-top: 10px;
        }

        .flex {
            display: flex;
        }

        .form-control {
            font-size: 14px;
            height: 32px;
        }

        .tittle {
            font-size: 13px;
            width: 100%;
            padding: 2px 5px;
            margin-bottom: 0;
        }

        .activeLink {
            color: red;
            font-weight: bold;
        }

        .rightPanel {
            padding: 1px;
            border: 1px solid #ddd;
            margin: 5px;
        }

        .menubar {
            margin: 4px 0;
            padding: 0 30px;
        }

        ul.menubar li {
            font-size: 13px;
            padding: 3px 0;
        }

        .bg-custom {
            background: #e9e9e9;
        }

        .processBar {
            /*list-style-type: none;*/
            counter-reset: step;
        }

            .processBar li {
                display: inline-block;
                float: left;
                width: 20%;
                position: relative;
                text-align: center;
            }

                .processBar li:before {
                    content: counter(step);
                    counter-increment: step;
                    width: 30px;
                    height: 30px;
                    border: 1px solid #e3e3e3;
                    display: block;
                    margin: 0 auto 10px auto;
                    border-radius: 50%;
                    line-height: 27px;
                    background: #f7f7f7;
                    color: #979797;
                    font-size: 15px;
                    text-align: center;
                    font-weight: bold;
                }

                .processBar li:after {
                    content: '';
                    position: absolute;
                    width: 100%;
                    height: 2px;
                    background: #d7d7d7;
                    top: 15px;
                    left: -50%;
                    z-index: -1;
                }

                .processBar li:first-child:after {
                    content: none;
                }

                .processBar li.active + li:after {
                    background: #3aac5d;
                }

                .processBar li.active + li:before {
                    border-color: #3aac5d;
                    background: #3aac5d;
                    color: white
                }

        .button-loading {
            border-width: 2px !important;
            border-image: url(/images/loading.gif) 60 !important;
            pointer-events: none;
        }
    </style>
    <style>

        body {
