
@{
    ViewBag.Title = "ReceivablePayment";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/Canteen/JsModule/Canteen/ReceivablePayment.js"></script>
<style>

    .flex {
        display: flex !important;
        align-items: center;
    }

    hr {
        margin-top: 35px;
        margin-bottom: 5px;
        border: 0;
        border-top: 1px solid #eee;
    }

    .fileinput.input-group {
        display: flex;
    }

    .text-17 {
        font-size: 17px;
    }

    .panel-body {
        /*box-shadow: 1px 1px 10px #d2d2d2;*/
        border-radius: 10px;
        padding: 5px 3px 0px 3px;
        position: relative;
    }

    .ml15 {
        margin-left: 15px;
    }

</style>
<div id="page-content">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <div class="ml15">
                    <div class="">
                        <div class="panel">
                            <div class="panel-heading" style="background:#0076d0;">
                                <h4 class="text-white" style="font-size:14px;">Receivable Payment</h4>
                            </div>
                            <div class="panel-body">
                                <div class="row" style="background-color:#e3e0e0cc;margin-left: 0px;margin-right: 0px;height:65px;padding: 4px;">
                                    <div class="col-md-3">
                                        <label>From Date</label>
                                        <input type="date" id="txtSearchFrom" class="form-control" placeholder="from : dd-mm-yyyy" />
                                    </div>
                                    <div class="col-md-4">
                                        <label>To Date</label>
                                        <div class="flex">
                                            <input type="date" id="txtSearchTo" class="form-control" placeholder="from : dd-mm-yyyy" />
                                            <button id="btnAll" style="width:50%;height:27px" onclick="GetDataAllList()" class="btn btn-success"><i class="fa fa-search">&nbsp;Get</i></button>
                                        </div>
                                    </div>
                                    <div class="col-md-3"></div>
                                        <div class="col-md-2">
                                            <label style="margin-left:2px">Total</label>
                                            <div class="flex">
                                                <input type="text" id="txtTotal" class="form-control" style="color:red;font-size: small;width: 92px;" readonly value="0.00" />
                                            </div>

                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="table-responsive" style="height:450px;overflow-y:auto;border:1px solid #3498db;margin-top:5px;">
                                                <table id="tblReport" class="table table-bordered">
                                                    <thead>
                                                        <tr>
                                                            <th style="width:6%;text-align: center;"><input type="checkbox" id="chkallshift" /></th>
                                                            <th>Customer Name</th>
                                                            <th style="text-align:center;width:15%">Amount</th>
                                                            <th style="text-align:center;width:15%">PaidAmt</th>

                                                        </tr>
                                                    </thead>
                                                    <tbody></tbody>
                                                </table>
                                            </div>
                                        </div>


                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="panel">
                    <div class="panel-heading" style="background:#0076d0;">
                        <h4 class="text-white" style="font-size:14px;">Receivable Payment Save Details</h4>
                    </div>
                    <div class="panel-body" style="margin-left: 0px;margin-right: 0px;height:521px">
                        <div class="row">
                            <div class="col-md-12">
                                <label>Paymode</label>
                                <div class="flex">
                                    <select id="ddlPaymode" class="form-control">
                                        <option value="Cash">Cash</option>
                                    </select>
                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label>Remark</label>
                                <div class="flex">
                                    <textarea type="text" id="txtRemark" class="form-control" style="height: 100px;" placeholder="Remark...."></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="flex">
                                    <button type="submit" id="btnsave" class="btn btn-success" style="margin-top: 10px;" onclick="SaveCanteen()">
                                        <i class="fa fa-save"></i>&nbsp;Save
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

