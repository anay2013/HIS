<div class="row">
    <div class="col-md-12" style="margin:2px 0;">
        <div class="row">
            <div class="col-md-6">               
                <div style="display:flex;">
                    <label>Room/Bed : &nbsp;</label>
                    <input type="text" style="width: 20%;" id="txtRoomBedId" disabled class="form-control" placeholder="Room Bed Id" />
                    <input type="text" id="txtRoomBedName" style="width: 45%;" disabled class="form-control" placeholder="Room Bed Name" />
                    <button data-target="#modalBedAvailability" style="height: 26px;" data-toggle="modal" class="btn btn-warning"><i class="fa fa-bed">&nbsp;</i></button>
                </div>
            </div>
            @*<div class="col-md-6">
            <div class="RoomBed"><b>Room Bed Name : </b>
            <span id="txtRoomBedId" style="display:none"></span>
            <span id="txtRoomBedName"></span>
