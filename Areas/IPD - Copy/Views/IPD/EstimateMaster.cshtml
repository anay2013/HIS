
@{
    ViewBag.Title = "EstimateMaster";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/IPD/JsModule/IPD/EstimateMaster.js"></script>
<style>
    .row-green {
        background: #378a45;
        color: #fff;
    }

    .slot-selected {
        background: green !important;
    }

    .timeChoose {
        padding: 3px;
        color: #fff;
        background: #842407;
        border: 1px solid #ddd;
    }

    .TimeFrame {
        max-height: 480px;
        overflow: auto;
        overflow-y: auto;
    }

    .TimeSlot-Status {
        padding: 2px;
        color: white;
        background: #064c67;
        border-radius: 5px;
    }

    .TimeSlot-Title {
        align-items: center;
        display: flex;
        border: 1px solid #ddd;
        background: #f1f1f1;
        padding: 4px 6px;
        font-size: 13px;
        font-weight: bold;
        color: #036f98;
    }

    .TimeSlot {
        display: -webkit-inline-box;
        width: 18%;
        margin: 6px 7px;
        box-shadow: 1px 2px 4px #ddd;
        cursor: pointer;
        background: #cccccc;
        color: #fff;
        padding: 2px 22px;
        line-height: 22px;
        text-align: center;
    }

        .TimeSlot:hover {
            box-shadow: 1px 2px 4px #4c4646;
            transition: all 0.6s;
        }

    span[disabled] {
        background: #ccc !important;
        cursor: not-allowed !important;
    }

        span[disabled] > .TimeSlot-Status {
            background: #595a58 !important;
        }

    .disabled {
        background: #ddd !important;
    }

    .btn-flat {
        padding: 5px;
        border: navajowhite;
    }

    .search-section {
        border: 1px solid #ddd;
        background: #ffeaea;
        padding: 5px;
        line-height: 26px;
        text-align: center;
    }

    .flex {
        display: flex !important;
        align-items: center;
    }

    hr {
        margin-top: 35px;
        margin-bottom: 5px;
        border: 0;
        border-top: 1px solid #eee;
    }

    .fileinput.input-group {
        display: flex;
    }

    .text-17 {
        font-size: 17px;
    }

    .scroll {
        width: 100%;
        background: #fff;
        overflow: overlay;
        max-height: 480px;
        display: block;
    }

    .panel-body {
        border-radius: 10px;
        padding: 5px 3px 0px 3px;
        position: relative;
    }

    .ml15 {
        margin-left: 15px;
    }

    .btn-close {
        right: 5px;
        opacity: 100%;
        position: absolute;
        color: #fff !important;
        font-weight: bold;
        font-size: 12px;
        padding: 0px 6px;
        background: #b92c02;
        height: 16px;
        border-radius: 2px;
        cursor: pointer;
    }

    .navigation div[class*=col-md-2] {
        width: 10%;
        padding: 2px;
    }

    .navigation div[class*=col-md-4] {
        width: 38%;
        padding: 2px;
    }

    .navigation input {
        padding: 3px;
    }
</style>
<div id="page-content">
    <div class="container">
        <div class="ml15">
            <div class="panel-body">
                <div class="row navigation" style="background-color:#bddeff;margin-bottom:10px;height:60px;padding-top: 5px;">
                    <div class="col-md-3">
                        Category
                        <div style="display:flex">
                            <select id="ddlCategory" class="form-control"></select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        Tariff
                        <input type="text" id="txtTariff" class="form-control" />
                    </div>
                    <div class="col-md-2">
                        Consult Charge
                        <input type="text" id="txtConsult" class="form-control" />
                    </div>
                    <div class="col-md-2">
                        Nursing Charges
                        <input type="text" id="txtNursing" class="form-control" />
                    </div>
                    <div class="col-md-2">
                        RMO Charges
                        <input type="text" id="txtRMO" class="form-control" />
                    </div>
                    <div class="col-md-2">
                        Dietician Charge
                        <input type="text" id="txtDietician" class="form-control" />
                        <input type="text" id="txtsrno" class="form-control hidden" />
                    </div>
                    <div class="col-md-1">
                        <button class="btn btn-success" style="margin-top: 22px;" onclick="InsertEstimateMaster()" id="btnSubmit">Save</button>
                        <button class="btn bg-orange waves-effect" style="margin-top: -44px;margin-left: 82px;" onclick="Clear()">Clear</button>
                    </div>
                </div>
                <div class="row">
                    <div class="scroll" style="height:400px;border:1px solid #2478a9;width:99%;margin-left:6px">
                        <table id="tblEstimateMaster" class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Category </th>
                                    <th>Tariff/day </th>
                                    <th>Consultation/day</th>
                                    <th>Nursing/day</th>
                                    <th>RMO/Intensivist/day</th>
                                    <th>Diectician Charge</th>
                                    <th>Daily Total</th>
                                    <th style="width:1%">CMD</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
