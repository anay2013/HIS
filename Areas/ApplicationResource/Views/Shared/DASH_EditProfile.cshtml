

<style>
    .card_box {
        height: 500px;
        background: #fff;
        border-radius: 5px;
        padding: 15px;
        border: 1.1px solid #ebebeb;
    }

    .block {
        pointer-events: none;
        opacity: 0.5;
    }

    .formLabel {
        font-weight: bold;
        white-space: pre;
        margin-bottom: 0;
        color: #3c3c3c;
        font-size: 14px;
    }

    .mobileInputAuth {
        width: 80%;
        border: 1px solid #c9c8c8;
        border-radius: 5px;
        padding: 0 3px;
        display: flex;
        align-items: center;
    }

        .mobileInputAuth label {
            background: #e9ecef;
            padding: 7px 30px;
            margin: -3px;
            border-radius: 5px 0 0px 5px;
        }

        .mobileInputAuth input:focus {
            outline-style: none;
            box-shadow: none;
        }

    .btnEdit {
        text-decoration: none;
        color: red;
    }

    .profileImage {
        text-align: center;
        border: 1px solid #e7e7e7;
        border-radius: 4px;
        padding: 20px;
        box-shadow: 1px 1px 12px #ebebeb;
    }

        .profileImage img {
            width: 200px;
            height: 200px;
            margin: 3px;
        }
    .editImgIcon {
        top: 64%;
        right: 62px;
        position: absolute;
        background: #2e79bb;
        color: white;
        width: 30px;
        height: 30px;
        border-radius: 40px;
        padding: 2px;
        line-height: 27px;
        cursor:pointer;
    }
</style>
<script src="~/Areas/ApplicationResource/JsModule/DASH_EditProfile.js?v1.4"></script>
<label>Edit Profile</label>
<div class="card_box">
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-4">
                <label>Name</label><br />
                <p id="txtName">-</p>
            </div>
            <div class="col-md-4">
                <label>Gender</label><br />
                <p id="txtGender">-</p>
            </div>
            <div class="col-md-4">
                <label>Date of birth</label><br />
                <p id="txtDOB">-</p>
            </div>
            <div class="col-md-12">
                <label>Address</label><br />
                <p id="txtAddress">-</p>
            </div>
            <div class="col-md-4">
                <label>District</label><br />
                <p id="txtDistrict">-</p>
            </div>
            <div class="col-md-4">
                <label>State</label><br />
                <p id="txtState">-</p>
            </div>
            <div class="col-md-4">
                <label>Pin Code</label><br />
                <p id="txtPinCode">-</p>
            </div>
            <div class="col-md-12">
                <label class="formLabel">Mobile number <span class="mendatory">*</span></label><br />
                <div style="align-items:baseline;display:flex">
                    <label class="mobileInputAuth block">
                        <label>+91</label>
                        <input type="text" id="txtMobileNo" style="border:none;margin-left: 7px;" placeholder="Mobile number" class="form-control" />
                    </label>
                    @*<a href="#" onclick="" style="margin-left: 5px;" class="btnEdit"><i class="fa fa-pencil">&nbsp;</i>Edit</a>*@
                </div>
            </div>
            <div class="col-md-12">
                <label class="formLabel">Email address</label><br />
                <div style="align-items:baseline;display:flex">
                    <label class="mobileInputAuth block">
                        <input type="text" id="txtEmailAddress" style="border:none;margin-left: 7px;" placeholder="Email address" class="form-control" />
                    </label>
                    @*<a href="#" onclick="" style="margin-left: 5px;" class="btnEdit">Verify</a>*@
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="profileImage">
            <img src="" id="profileImage" />
            <input type="file" id="UploadPhoto" class="hide" />
            @*<i class="fa fa-edit editImgIcon" onclick="$('#UploadPhoto').trigger('click')"></i>*@
            <p style="font-size: 12px;color: #2e79bb;margin-top:10px">please upload JPG, JPEG file types.<br />Maximum size allowedfor the attachment is 100KB</p>
        </div>
    </div>
</div>