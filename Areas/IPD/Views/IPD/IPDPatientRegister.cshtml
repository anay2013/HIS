@{
    ViewBag.Title = "IPDPatientRegister";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/IPD/JsModule/IPD/IPDPatientRegister.js"></script>
<style>
    .row-green {
        background: #378a45;
        color: #fff;
    }

    .slot-selected {
        background: green !important;
    }

    .timeChoose {
        padding: 3px;
        color: #fff;
        background: #842407;
        border: 1px solid #ddd;
    }

    .TimeFrame {
        max-height: 480px;
        overflow: auto;
        overflow-y: auto;
    }

    .TimeSlot-Status {
        padding: 2px;
        color: white;
        background: #064c67;
        border-radius: 5px;
    }

    .TimeSlot-Title {
        align-items: center;
        display: flex;
        border: 1px solid #ddd;
        background: #f1f1f1;
        padding: 4px 6px;
        font-size: 13px;
        font-weight: bold;
        color: #036f98;
    }

    .TimeSlot {
        display: -webkit-inline-box;
        width: 18%;
        margin: 6px 7px;
        box-shadow: 1px 2px 4px #ddd;
        cursor: pointer;
        background: #cccccc;
        color: #fff;
        padding: 2px 22px;
        /* border-top-left-radius: 15px; */
        /* border-bottom-right-radius: 15px; */
        line-height: 22px;
        text-align: center;
    }

        .TimeSlot:hover {
            box-shadow: 1px 2px 4px #4c4646;
            transition: all 0.6s;
        }

    span[disabled] {
        background: #ccc !important;
        cursor: not-allowed !important;
    }

        span[disabled] > .TimeSlot-Status {
            background: #595a58 !important;
        }

    .disabled {
        background: #ddd !important;
    }

    .btn-flat {
        padding: 5px;
        border: navajowhite;
    }

    .search-section {
        border: 1px solid #ddd;
        background: #ffeaea;
        padding: 5px;
        line-height: 26px;
        text-align: center;
    }

    .flex {
        display: flex !important;
        align-items: center;
    }

    hr {
        margin-top: 35px;
        margin-bottom: 5px;
        border: 0;
        border-top: 1px solid #eee;
    }

    .fileinput.input-group {
        display: flex;
    }

    .text-17 {
        font-size: 17px;
    }

    .scroll {
        width: 100%;
        background: #fff;
        overflow: overlay;
        max-height: 480px;
        display: block;
    }

    .panel-body {
        /*box-shadow: 1px 1px 10px #d2d2d2;*/
        border-radius: 10px;
        padding: 5px 3px 0px 3px;
        position: relative;
    }

    .ml15 {
        margin-left: 15px;
    }

    .btn-close {
        right: 5px;
        opacity: 100%;
        position: absolute;
        color: #fff !important;
        font-weight: bold;
        font-size: 12px;
        padding: 0px 6px;
        background: #b92c02;
        height: 16px;
        border-radius: 2px;
        cursor: pointer;
    }
</style>
<div id="page-content">
    <div class="container">
        <div class="ml15">
            <div class="panel-body" style="margin:0 10px">
                <div class="row" style="background-color:#bddeff;margin-bottom:10px;height:60px;padding-top: 5px;">
                    <div class="col-md-2">
                        Active/Discharge
                        <select id="ddlActive" class="form-control border-imp" style="width: 90px !important;">
                            <option value="ALL">ALL</option>
                            <option value="IN" selected>Active</option>
                            <option value="Out">Discharge</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        Floor Name
                        <select id="ddlFloor" class="form-control border-imp" style="width: 90px !important;"></select>
                    </div>
                    <div class="col-md-3">
                        Panel Name
                        <select id="ddlPanel" class="form-control border-imp" style="width: 90px !important;"></select>
                    </div>
                    <div class="col-md-2">
                        From Date
                        <input type="date" id="txtSearchFrom" class="form-control" placeholder="from : dd-mm-yyyy" />
                    </div>
                    <div class="col-md-2">
                        To Date
                        <input type="date" id="txtSearchTo" class="form-control" placeholder="to : dd-mm-yyyy" />
                    </div>
                    <div class="col-md-1">
                        <br />
                        <button id="btnPatient" class="btn btn-success"><i class="fa fa-search">&nbsp;</i>Search</button>
                    </div>
                </div>
                <div class="row">
                    <div class="scroll" style="height:600px">
                        <table id="tblPatientRegister" class="table table-bordered">
                            <thead>
                                <tr>
                                    <th style="width:1%">CMD</th>
                                    <th>UHID</th>
                                    <th>IPD No</th>
                                    <th>Patient Name</th>
                                    <th>Doctor Name</th>
                                    <th>Room Name</th>
                                    <th>Room Type Request</th>
                                    <th>Admit Date</th>
                                    <th>Attendant</th>
                                    <th>Panel Name</th>
                                    <th>Print</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modalPatientInfo" tabindex="-1" role="dialog" aria-labelledby="True">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" style="margin-top:10%;">
            <div class="panel-heading flex" style="background:#0076d0;padding:1px 5px;">
                <h5 class="text-white">Patient Info</h5>
                <span data-dismiss="modal" class="btn-close">x</span>
            </div>
            <div class="modal-body" style="height:360px;">
                <div class="row">
                    <div class="col-md-12">
                        <table id="tblPatientInfo" class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Admission Type</th>
                                    <th>Room Type</th>
                                    <th>room Full Name</th>
                                    <th>Room Billing Category</th>
                                    <th>MLC Type</th>
                                    <th>Ref Name</th>
                                    <th>Patient Type</th>
                                    <th>Policy No</th>
                                    <th>Source Name</th>
                                    <th>Discharge Date</th>
                                    <th>Discharge By</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

