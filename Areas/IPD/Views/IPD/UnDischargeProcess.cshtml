
@{
    ViewBag.Title = "UnDischargeProcess";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/IPD/JsModule/IPD/UnDischargeProcess.js"></script>
<style>
    .panel {
        margin-bottom: 2px !important;
        margin-left: 2px !important;
    }

    .panel-heading {
        padding: 1px 5px;
    }

    .panel-body {
        padding: 2px 1px;
        margin-top: 1px;
    }

    .selected {
        background-color: #3498db;
        color: #fff;
    }

    .bn {
        margin: 0px;
        font-size: 10pt;
        padding: 0px 12px;
        border-radius: 0;
        height: 28px;
        /*margin-top: 11%;*/
    }

    .btn-add {
        border: none;
        padding: 6px;
        margin-left: 1px;
    }

    .btn {
        border: none;
        padding: 1px 9px;
        font-size: 13px;
        margin-bottom: 2px;
    }

    #billid {
        /* border: 1px solid black; */
        width: 66%;
        color: white;
        /* background-color: #86b3de; */
        margin-top: 5px;
        margin-bottom: 1px;
        background: #2478a9;
        padding: 2px;
    }

    #tblReport thead th {
        padding: 3px;
    }

    #tblReport tbody td {
        padding: 3px;
    }

    #tblReportInfo thead th {
        padding: 3px;
    }

    #tblReportInfo tbody td {
        padding: 3px;
    }
</style>
<div id="page-content">
    <div class="col-lg-12">
        <div class="row">
            <div class="ml15">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h5>UnDischargeProcess</h5>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div style="display:flex">
                                    <input type="text" id="txtIPDNo" class="form-control" style="border: 1px solid #86b3de;" placeholder="Search IPOPNo ...." />
                                    <button style="height:28px;width:30%" class="btn bg-blue bn" onclick="GetDataUnDischargeList()"><i class="fa fa-search">&nbsp;</i>Get</button>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="table-responsive" style="height:100px;overflow-y:auto; overflow-x:auto;border:1px solid #3498db">
                                    <table class="table table-bordered" id="tblReport">
                                        <thead>
                                            <tr>

                                                <th style="">IPDNO</th>
                                                <th style="">RoomName</th>
                                                <th style="">Patient Name</th>
                                                <th style="">Admit Date</th>
                                                <th style="">Discharge Date</th>
                                                <th style="">Status</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <label id="billid">Billing Information</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8">
                                <div class="table-responsive" style="height:100px;overflow-y:auto; overflow-x:auto;border:1px solid #3498db">
                                    <table class="table table-bordered" id="tblReportInfo">
                                        <thead>
                                            <tr>
                                                <th style="">Bill No</th>
                                                <th style="">Bill Date</th>
                                                <th style="text-align:center">TotalAmount</th>
                                                <th style="">BillClosed</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <button type="button" id="btnUndischarge" class="btn btn-success bn" style="margin-top:20%" onclick="SaveUnDischarge()"><i class="fa fa-save"></i>&nbsp;UnDischarged</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

