
@{
    ViewBag.Title = "ChangePanel";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/IPD/JsModule/IPD/ChangePanel.js"></script>
<style>
    .panel {
        margin-bottom: 2px !important;
        margin-left: 2px !important;
    }

    .btn-flat {
        padding: 5px;
        border: navajowhite;
        width: 28%;
        margin-left: 1%;
    }


    .panel-heading {
        padding: 1px 5px;
    }

    .panel-body {
        padding: 2px 1px;
        margin-top: 1px;
    }

    .row-green {
        background: #378a45;
        color: #fff;
    }

    .slot-selected {
        background: green !important;
    }

    #btnPatient {
        margin-left: -5px;
    }

    .timeChoose {
        padding: 3px;
        color: #fff;
        background: #842407;
        border: 1px solid #ddd;
    }

    .TimeFrame {
        max-height: 480px;
        overflow: auto;
        overflow-y: auto;
    }

    .TimeSlot-Status {
        padding: 2px;
        color: white;
        background: #064c67;
        border-radius: 5px;
    }

    .TimeSlot-Title {
        align-items: center;
        display: flex;
        border: 1px solid #ddd;
        background: #f1f1f1;
        padding: 4px 6px;
        font-size: 13px;
        font-weight: bold;
        color: #036f98;
    }

    .TimeSlot {
        display: -webkit-inline-box;
        width: 18%;
        margin: 6px 7px;
        box-shadow: 1px 2px 4px #ddd;
        cursor: pointer;
        background: #cccccc;
        color: #fff;
        padding: 2px 22px;
        /* border-top-left-radius: 15px; */
        /* border-bottom-right-radius: 15px; */
        line-height: 22px;
        text-align: center;
    }

        .TimeSlot:hover {
            box-shadow: 1px 2px 4px #4c4646;
            transition: all 0.6s;
        }

    span[disabled] {
        background: #ccc !important;
        cursor: not-allowed !important;
    }

        span[disabled] > .TimeSlot-Status {
            background: #595a58 !important;
        }

    .disabled {
        background: #ddd !important;
    }

    .btn-flat {
        padding: 5px;
        border: navajowhite;
    }

    /*.search-section {
        border: 1px solid #ddd;
        background: #ffeaea;
        padding: 5px;
        line-height: 26px;
        text-align: center;
    }*/

    .flex {
        display: flex !important;
        align-items: center;
    }

    hr {
        margin-top: 35px;
        margin-bottom: 5px;
        border: 0;
        border-top: 1px solid #eee;
    }

    .fileinput.input-group {
        display: flex;
    }

    .text-17 {
        font-size: 17px;
    }

    .scroll {
        width: 100%;
        background: #fff;
        overflow: overlay;
        max-height: 480px;
        display: block;
    }

    .panel-body {
        /*box-shadow: 1px 1px 10px #d2d2d2;*/
        border-radius: 10px;
        padding: 5px 3px 0px 3px;
        position: relative;
    }

    .ml15 {
        margin-left: 15px;
    }

    .btn-close {
        right: 5px;
        opacity: 100%;
        position: absolute;
        color: #fff !important;
        font-weight: bold;
        font-size: 12px;
        padding: 0px 6px;
        background: #b92c02;
        height: 16px;
        border-radius: 2px;
        cursor: pointer;
    }

    .category {
        font-weight: bold;
        background: #2478a9;
        display: block;
        color: #ffffff;
        padding: 1px 9px;
    }

    .search-section {
        border: 1px solid #ddd;
        background: #ffeaea;
        padding: 0px;
        line-height: 25px;
        text-align: center;
        height: 60px;
        padding-top: 5px;
    }

    .borderhight {
        border-right: 1px solid black;
        height: 100%;
    }

    .navigation div[class*=col-md-2] {
        width: 16%;
        /*//padding: 2px;*/
    }

    .navigation div[class*=col-md-3] {
        width: 40%;
        /*padding: 2px;*/
    }

    .navigation input {
        padding: 1px;
    }
</style>
<div id="page-content">
    <div class="container">
        <div class="ml15">
            <div class="panel-body" style="margin:-3px 7px">
                <div class="row" style="background-color:#bddeff;margin-bottom:5px;height:82px;padding-top: 5px;">
                    <div class="col-md-2">
                        IPD NO
                        <div style="display:flex">
                            <input type="text" id="txtIPDNo" class="form-control" />
                        </div>
                    </div>

                    <div class="col-md-3">
                        New Panel Name
                        <div style="display:flex">
                            <select id="ddlPanel" class="form-control" style="width:500px"></select>
                        </div>
                    </div>
                    <div class="col-md-1">
                        <button id="btnSearch" style="width:90%;height: 26px;margin-top: 22%;" class="btn-success btn-flat" onclick="GetAllDataIPDNoByPanel()"><i class="fa fa-search"></i>Search</button>
                    </div>
                    <div class="col-md-6">
                        <table style="width:100%">
                            <tr>
                                <td style="text-align:left">PatientName</td>
                                <td style="text-align:left"><label id="Pname" style="margin-left:16px"></label></td>
                                <td style="text-align:left">RoomFullName</td>
                                <td style="text-align:left"><label id="Rfullname" style="margin-left:16px"></label></td>
                            </tr>
                            <tr>
                                <td style="text-align:left">IPDNO</td>
                                <td style="text-align:left"><label id="IPDNo" style="margin-left:16px"></label></td>
                                <td style="text-align:left">UHIDNo</td>
                                <td style="text-align:left"><label id="UHIDNo" style="margin-left:16px"></label></td>
                            </tr>
                            <tr>
                                <td style="text-align:left">Billing Category</td>
                                <td style="text-align:left"><label id="RoomBillingname" style="margin-left:16px"></label></td>
                                <td style="text-align:left">Curent Panel</td>
                                <td style="text-align:left">
                                    <label id="CurentPanel" style="margin-left:16px"></label>
                                </td>
                            </tr>

                        </table>


                    </div>

                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="row">
                            <div class="panel panel-primary">
                                <div class="">
                                    <div class="row" style="background-color:#f1dde0;padding:5px;margin-left: 0px;margin-right: 0px;height: 40px;">
                                        <div class="col-md-3">
                                        </div>
                                        <div class="col-md-3">
                                            <label style="margin-top: 7px; margin-left: 14px;">Exiting Amount</label>
                                        </div>
                                        <div class="col-sm-6 form-group">
                                            <input type="text" id="txtExitingamount" class="form-control" style="border:1px solid #86b3de;text-align:right; font-size:18px" />
                                        </div>
                                    </div>


                                </div>
                            </div>
                            <div class="panel panel-primary">
                                <div class="panel-body">
                                    <div class="table-responsive" style="height:450px;overflow-y:auto;border: 1px solid #4f7ba1;">
                                        <table class="table table-bordered" id="tblExitingAmount">
                                            <thead>
                                                <tr>
                                                    <th>Date</th>
                                                    <th>Item Name</th>
                                                    <th>Panel Rate</th>
                                                    <th>Panel Discount</th>
                                                    <th>Additional Discount</th>
                                                    <th>Amount</th>

                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="row">
                            <div class="panel panel-primary">
                                <div class="">
                                    <div class="row" style="background-color:#f1dde0;padding:5px;margin-left: 1px;margin-right: 1px; height: 40px;">
                                        <div class="col-md-3">
                                            <input type="button" value="Submit" class="form-control btn-warning" onclick="Submitdata();" />

                                        </div>
                                        <div class="col-md-3">
                                            <label style="margin-top: 7px; margin-left: 2px;">Changed Amount</label>
                                        </div>
                                        <div class="col-sm-6 form-group">
                                            <input type="text" id="txtChangedAmount" class="form-control" style="border:1px solid #86b3de;text-align:right; font-size:18px" />
                                        </div>
                                    </div>


                                </div>
                            </div>

                            <div class="panel panel-primary">
                                <div class="panel-body">
                                    <div class="table-responsive" style="height:450px;overflow-y:auto;border: 1px solid #4f7ba1;">
                                        <table class="table table-bordered" id="tblChangeAmount">
                                            <thead>
                                                <tr>
                                                    <th>Date</th>
                                                    <th>Item Name</th>
                                                    <th>Panel Rate</th>
                                                    <th>Panel Discount</th>
                                                    <th>Additional Discount</th>
                                                    <th>Amount</th>

                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>