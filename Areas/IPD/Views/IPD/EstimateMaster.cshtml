
@{
    ViewBag.Title = "EstimateMaster";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/IPD/JsModule/IPD/EstimateMaster.js"></script>
<style>
    .panel {
        margin-bottom: 2px !important;
        margin-left: 2px !important;
    }

    .btn-flat {
        padding: 0px;
        border: navajowhite;
        width: 28%;
        margin-left: 1%;
    }


    .panel-heading {
        padding: 1px 5px;
    }

    .panel-body {
        padding: 2px 1px;
        margin-top: 1px;
    }

    .row-green {
        background: #378a45;
        color: #fff;
    }

    .slot-selected {
        background: green !important;
    }

    #btnPatient {
        margin-left: -5px;
    }

    .timeChoose {
        padding: 3px;
        color: #fff;
        background: #842407;
        border: 1px solid #ddd;
    }

    .TimeFrame {
        max-height: 480px;
        overflow: auto;
        overflow-y: auto;
    }

    .TimeSlot-Status {
        padding: 2px;
        color: white;
        background: #064c67;
        border-radius: 5px;
    }

    .TimeSlot-Title {
        align-items: center;
        display: flex;
        border: 1px solid #ddd;
        background: #f1f1f1;
        padding: 4px 6px;
        font-size: 13px;
        font-weight: bold;
        color: #036f98;
    }

    .TimeSlot {
        display: -webkit-inline-box;
        width: 18%;
        margin: 6px 7px;
        box-shadow: 1px 2px 4px #ddd;
        cursor: pointer;
        background: #cccccc;
        color: #fff;
        padding: 2px 22px;
        line-height: 22px;
        text-align: center;
    }

        .TimeSlot:hover {
            box-shadow: 1px 2px 4px #4c4646;
            transition: all 0.6s;
        }

    span[disabled] {
        background: #ccc !important;
        cursor: not-allowed !important;
    }

        span[disabled] > .TimeSlot-Status {
            background: #595a58 !important;
        }

    .disabled {
        background: #ddd !important;
    }

    .btn-flat {
        padding: 0px;
        border: navajowhite;
    }

    .flex {
        display: flex !important;
        align-items: center;
    }

    hr {
        margin-top: 35px;
        margin-bottom: 5px;
        border: 0;
        border-top: 1px solid #eee;
    }

    .fileinput.input-group {
        display: flex;
    }

    .text-17 {
        font-size: 17px;
    }

    .scroll {
        width: 100%;
        background: #fff;
        overflow: overlay;
        max-height: 480px;
        display: block;
    }

    .panel-body {
        border-radius: 10px;
        padding: 5px 3px 0px 3px;
        position: relative;
    }

    .ml15 {
        margin-left: 15px;
    }

    .btn-close {
        right: 5px;
        opacity: 100%;
        position: absolute;
        color: #fff !important;
        font-weight: bold;
        font-size: 12px;
        padding: 0px 6px;
        background: #b92c02;
        height: 16px;
        border-radius: 2px;
        cursor: pointer;
    }

    .category {
        font-weight: bold;
        background: #2478a9;
        display: block;
        color: #ffffff;
        padding: 1px 9px;
    }

    .search-section {
        border: 1px solid #ddd;
        background: #ffeaea;
        padding: 0px;
        line-height: 20px;
        text-align: center;
        height: 60px;
        padding-top: 5px;
    }

    .borderhight {
        border-right: 1px solid black;
        height: 100%;
    }

    .navigation div[class*=col-md-2] {
        width: 16%;
    }

    .navigation div[class*=col-md-3] {
        width: 40%;
    }

    .navigation input {
        padding: 1px;
    }
</style>
<div id="page-content">
    <div class="container">
        <div class="ml15">
            <div class="panel-body" style="margin:-3px 7px">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="row">
                            <div class="panel panel-primary">
                                <div class="">
                                    <div class="row" style="background-color:#3c8dbc59;padding:5px;margin-left: 0px;margin-right: 0px;height:127px;">
                                        <div class="col-sm-3 form-group">
                                            <label>Billing Category </label>
                                            <label style="margin-left: 12px;">: </label>
                                        </div>
                                        <div class="col-sm-9 form-group">
                                            <select id="ddlBilling" class="form-control" onchange="BillingCategoryList()"></select>
                                        </div>
                                        <div class="col-sm-3 form-group">
                                            <label> Search Item Name </label>
                                            <label> : </label>
                                        </div>
                                        <div class="col-sm-9 form-group">
                                            <div class="flex">
                                                <input type="text" id="txtbillings" class="form-control" placeholder="Item Name" style="border:1px solid #86b3de;" />
                                                <button id="btnSearch" style="width:102px;height: 28px;margin-left: -20px;" class="btn-warning btn-flat" onclick="SearchIPDBillingCategory()">Search</button>
                                            </div>  
                                        </div>
                                        <div class="col-sm-3 form-group">
                                            <label> Unit Price </label>
                                            <label style="margin-left: 47px;"> : </label>
                                        </div>
                                        <div class="col-sm-9 form-group">
                                            <div class="flex">
                                                <input type="text" id="txtunitprice" class="form-control" placeholder="00000" style="border:1px solid #86b3de;" />
                                                <button id="btnSingleAd" style="width:102px;height: 28px;margin-left: -20px;" class="btn-success btn-flat" onclick="AddAmount()">Add</button>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="panel panel-primary">
                                <div class="panel-body">
                                    <div class="table-responsive" style="height:400px;overflow-y:auto;border: 1px solid #4f7ba1;">
                                        <table class="table table-bordered" id="tblBillingCat">
                                            <thead>
                                                <tr>
                                                    <th style="width:10%;text-align:center">Checkbox</th>
                                                    <th>Item Id</th>
                                                    <th>Item Name</th>
                                                    <th style="text-align:center;width:30%;">Unit Price</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-1">
                        <div class="row">
                            <div class="col-md-12 d-flex justify-content-center align-items-center">
                                <button id="btnAdd" style="width:80px;height: 27px;margin-top: 200px;margin-left:1px" class="btn-success btn-flat" onclick="InsertEstimateMaster()">Add</button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 d-flex justify-content-center align-items-center">
                                <button id="btnAdd" style="width:80px;height: 27px;margin-top: 20px;margin-left:1px" class="btn-danger btn-flat" onclick="DeleteEstimateMaster()">Delete</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5" style="margin-left: -14px;">
                        <div class="row">
                            <div class="panel panel-primary" style="border:1px solid #4f7ba1;height:540px">
                                <div class="panel-heading">
                                    <h6 style="height:5px;margin-top: 5px;">Exist Estimate Master</h6>
                                </div>
                                <div class="panel-body">
                                    <div class="table-responsive" style="height:500px;overflow-y:auto;border: 1px solid #3c8dbc59;margin-top: -4px;">
                                        <table class="table table-bordered" id="tblAddBilling">
                                            <thead>
                                                <tr>
                                                    <th style="width:1%;">Checkbox</th>
                                                    <th>Room Billing Category</th>
                                                    <th>Item Name</th>
                                                    <th>Unit Price</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
