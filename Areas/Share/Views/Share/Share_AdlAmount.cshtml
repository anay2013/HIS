
@{
    ViewBag.Title = "Share_AdlAmount";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <script src="~/Areas/Share/JSModule/Share_AdlAmount.js"></script>

    <style>
        .panel {
            margin-bottom: 2px !important;
            margin-left: 2px !important;
        }

        .panel-heading {
            padding: 1px 5px;
        }

        .panel-body {
            padding: 4px 6px;
            margin-top: 1px;
        }

        .selected {
            background-color: #3498db;
            color: #fff;
        }

        .bn {
            margin: 0px;
            font-size: 10pt;
            padding: 0px 12px;
            border-radius: 0;
            height: 32px;
        }

        .btn-add {
            border: none;
            padding: 6px;
            margin-left: 1px;
        }

        .btn {
            border: none;
            padding: 1px 9px;
            font-size: 13px;
            margin-bottom: 2px;
        }

        #tblReoprt thead th {
            padding: 3px;
        }

        #tblReoprt tbody td {
            padding: 3px;
        }
    </style>
</head>
<body>
    <div id="page-content">
        <div class="col-lg-12">
            <div class="row">
                <div class="ml15">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-md-10">
                                    <h5>Share_AdlAmount</h5>
                                </div>

                            </div>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-2">
                                    <div style="display:flex">
                                        <input type="month" id="txtMonth" class="form-control" />
                                        <button id="btnSearch" style="width: 60px;height: 28px;" class="btn bg-blue bn" onclick="GetAllListAmount()">Get</button>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div style="display:flex">
                                        <span style="margin-top: 5px; width:30%;">Doctor Name</span>
                                        <select id="ddlDoctor" class="form-control"></select>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div style="display:flex">
                                        <span style="margin-top: 5px; width:20%;">Type</span>
                                        <select id="ddlType" class="form-control">
                                            <option value="Select">Select</option>
                                            <option value="Arrears">Arrears</option>
                                            <option value="Doctor Compensation">Doctor Compensation</option>
                                            <option value="Additional-Share">Additional-Share</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div style="display:flex">
                                        <span style="margin-top: 5px; width:40%;">Amount</span>
                                        <input class="form-control" id="txtAmout" type="text" />
                                        <button id="btnSearch" style="width: 60px;height: 27px;" class="btn btn-success" onclick="SaveAmount()">Add</button>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="table-responsive" style="height:450px;overflow-y:auto;border:1px solid #3498db;margin-top:4px">
                                        <table class="table table-bordered" id="tblReoprt">
                                            <thead>
                                                <tr>
                                                    <th style=""> month_name</th>
                                                    <th style="">DoctorName</th>
                                                    <th style="">TnxType</th>
                                                    <th style="text-align:center">share_amount</th>
                                                    <th style="text-align:center">ChairpersonShare</th>
                                                    <th style="text-align:center">adj_amount</th>
                                                    <th style="text-align:center">Vice_ChairpersonShare</th>
                                                    <th style="">DeptName</th>
                                                    <th style="">Designation</th>
                                                    <th style="">tnxSource</th>
                                                    <th style="text-align:center">Date</th>
                                                </tr>


                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

