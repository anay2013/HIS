
@{
    ViewBag.Title = "Share_SubcatEmplink";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/Share/JSModule/Share_SubcatEmplink.js"></script>
<style>
    .panel {
        margin-bottom: 2px !important;
        margin-left: 2px !important;
    }

    .panel-heading {
        padding: 1px 5px;
    }

    .panel-body {
        padding: 4px 6px;
        margin-top: 1px;
    }

    .selected {
        background-color: #3498db;
        color: #fff;
    }

    .bn {
        margin: 0px;
        font-size: 10pt;
        padding: 0px 12px;
        border-radius: 0;
        height: 32px;
    }

    .btn-add {
        border: none;
        padding: 6px;
        margin-left: 1px;
    }

    .btn {
        border: none;
        padding: 1px 9px;
        font-size: 13px;
        margin-bottom: 2px;
    }

    #tblReoprt thead th {
        padding: 3px;
    }

    #tblReoprt tbody td {
        padding: 3px;
    }
</style>
<div id="page-content">
    <div class="col-lg-12">
        <div class="row">
            <div class="ml15">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h5>Share Employee Link</h5>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-5">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div style="display:flex">
                                            <input type="text" id="txtempName" class="form-control" placeholder="Search Employee Name" />
                                            <button id="btnSearch" style="width:30%;height:28px;" class="btn bg-blue bn" onclick="GetEmpInfo()"><i class="fa fa-search">&nbsp;</i>Search</button>
                                        </div>
                                    </div>
                                </div>

                                <div class="row" style="margin-top: 4px;">
                                    <div class="col-md-4">
                                        <div style="display:flex;">
                                            <span style="color:black">Employee Name :</span>
                                        </div>
                                        </div>
                                        <div class="col-md-8" style="margin-left:-40px; width:75%;">
                                            <div style="display:flex;">
                                                <select id="ddlEmployee" onchange="GetEmpLinkData()" class="form-control" style="width: 320px;"></select>
                                            </div>
                                        </div>
                                    </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="table-responsive" style="height:450px;overflow-y:auto;border:1px solid #3498db;margin-top:4px">
                                            <table class="table table-bordered" id="tblReoprt">
                                                <thead>
                                                    <tr>

                                                        <th style="width:30%;text-align:center">Sub Category Id</th>
                                                        <th style="width:60%;">Sub Category Name</th>
                                                        <th style="width:10%;text-align:center">CMD</th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-1" style="margin-top:25%; margin-left:-15px; margin-right:-10px;">
                                <button class="btn btn-success btn-block" onclick="LinkSubcatEmp('LinkSubCatEmp')"><i class="fa fa-sign-in">&nbsp;</i>Link</button>
                            </div>
                            <div class="col-md-6" style="width:52%;">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="table-responsive" style="height:512px;overflow-y:auto;border:1px solid #3498db;margin-top:4px;">
                                            <table class="table table-bordered" id="tblReoprtInfo">
                                                <thead>
                                                    <tr>

                                                        <th style="width:25%;">Employee Name</th>
                                                        <th style="width:25%;">Sub Category</th>
                                                        <th style="width:25%;">Date</th>
                                                        <th style="width:25%;">Used By</th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            </div>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

