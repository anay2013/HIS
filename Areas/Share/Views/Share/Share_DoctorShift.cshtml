
@{
    ViewBag.Title = "Share_DoctorShift";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/Share/JSModule/Share_DoctorShift.js"></script>
<style>
    .panel {
        margin-bottom: 2px !important;
        margin-left: 2px !important;
    }

    .panel-heading {
        padding: 1px 5px;
    }

    .panel-body {
        padding: 4px 6px;
        margin-top: 1px;
    }

    .selected {
        background-color: #3498db;
        color: #fff;
    }

    .bn {
        margin: 0px;
        font-size: 10pt;
        padding: 0px 12px;
        border-radius: 0;
        height: 32px;
    }

    .btn-add {
        border: none;
        padding: 6px;
        margin-left: 1px;
    }

    .btn {
        border: none;
        padding: 1px 9px;
        font-size: 13px;
        margin-bottom: 2px;
    }
  
</style>
<div id="page-content">
    <div class="col-lg-12">
        <div class="row">
            <div class="ml15">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h5>Doctor Shift</h5>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-2" style="width:13%;">
                                        <label>From</label>
                                        <div style="display:flex">
                                            <input type="date" id="txtfromdate" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-2" style="width:13%;">
                                        <label>To</label>
                                        <div style="display:flex">
                                            <input type="date" id="txttodate" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="col-md-2" style="width:15%">
                                        <label>Doctor List</label>
                                        <div style="display:flex;">
                                            <select id="ddlDoctor" class="form-control" style="width:150px;"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-2" style="width:15%">
                                        <label>Category</label>
                                        <div style="display:flex;">
                                            <select id="ddlCategory" class="form-control" style="width:150px"></select>
                                        </div>
                                    </div>

                                    <div class="col-md-2" style="width:20%">
                                        <label>Sub Category</label>
                                        <div style="display:flex;">
                                            <select id="ddlSubCategory" class="form-control" style="width:300px;"></select>
                                        </div>
                                        <button id="btnSearch" style="width:25%; height:28px; margin-top:-45px; margin-left:100%;" class="btn btn-success bn" onclick="GetDoctorShiftList()"><i class="fa fa-search">&nbsp;</i>Get</button>
                                    </div>

                                    <div class="col-md-2" style="width:20%;margin-top: 24px; margin-left: 4%;">
                                        <div style="display:flex;">
                                            <input type="text" id="txtName" class="form-control" placeholder="Search Item Name" />
                                            <button id="btnSearch" style="width:49%;height:28px;" class="btn bg-blue bn" onclick="GetItemListWise()"><i class="fa fa-search">&nbsp;</i>Search</button>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="table-responsive" style="height:400px;overflow-y:auto;border:1px solid #3498db;margin-top:-15px;">
                                            <table class="table table-bordered" id="tblReoprt">
                                                <thead>
                                                    <tr>
                                                        <th style="text-align:center;width:5%"><input id="chkallshift" type="checkbox" /></th>
                                                        <th style="width:13%;">TnxId</th>
                                                        <th style="width:12%;text-align:center">Date</th>
                                                        <th style="width:15%">Doctor Name</th>
                                                        <th style="width:20%"> Move To Doctor Shift</th>
                                                        <th style="width:15%">Item Name</th>
                                                        <th style="width:8%;text-align:center;">Rate</th>
                                                        <th style="width:8%;text-align:center;">Discount</th>
                                                        <th style="width:8%;text-align:center;">Amount</th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        <label style="margin-top: 5px;">Shift to Doctor</label>
                                        <div style="display:flex;">
                                            <select id="ddlDoctorShift" class="form-control"></select>
                                            <button id="btnSave" style="width:20%;height:28px;" class="btn btn-success bn" onclick="SaveDoctorShift()"><i class="fa fa-save">&nbsp;</i>Shift</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
