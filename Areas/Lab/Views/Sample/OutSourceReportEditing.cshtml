                        <div class="form-group flex">
                            <span style="width:20%"></span>
                            <input type="button" id="btnReset" class=" btn btn-warning" style="width: 100%;" onclick="ResetPathData()" value="Reset" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
