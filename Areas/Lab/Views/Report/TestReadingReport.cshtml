
@{
    /**/

    ViewBag.Title = "TestReadingReport";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<script src="~/Areas/Lab/JsModule/Report/TestReadingReport.js"></script>
<style>
    .panel {
        margin-bottom: 2px !important;
        margin-left: 2px !important;
    }

    .panel-heading {
        padding: 1px 5px;
    }

    .panel-body {
        padding: 2px 1px;
        margin-top: 1px;
    }

    .selected {
        background-color: #3498db;
        color: #fff;
    }

    .bn {
        margin: 0px;
        font-size: 10pt;
        padding: 0px 12px;
        border-radius: 0;
        width: 38%;
        height: 28px;
    }

    .btn-add {
        border: none;
        padding: 6px;
        margin-left: 1px;
    }

    .btn {
        border: none;
        padding: 1px 9px;
        font-size: 13px;
        margin-bottom: 2px;
    }

    #tblReport thead th {
        padding: 4px;
    }

    #tblReportTestCount thead th {
        padding: 4px;
    }
</style>
<div id="page-content">
    <div class="col-lg-12">
        <div class="row">
            <div class="ml15">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h5>Lab Test Report</h5>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-5">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label>Category</label>
                                        <div style="display:flex">
                                            <select id="ddlCategory" class="form-control"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <label> From</label>
                                        <div style="display:flex">
                                            <input type="date" id="txtfromdate" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <label> To</label>
                                        <div style="display:flex">
                                            <input type="date" id="txttodate" class="form-control" />
                                            <button class="btn btn-success bn" id="btnget" onclick="GetAllTestCount('GetTestCountByCategory')"><i class="fa fa-search"></i>&nbsp;Get</button>
                                            <button class="btn btn-warning bn" style="margin-left: 4px;width: 48%;" id="btnexecl" onclick="GetExecls('GetTestCountByCategory')"><i class="fa fa-file-excel-o"></i>&nbsp;Excel</button>
                                        </div>

                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="table-responsive" style="height:450px;overflow-y:auto;border:1px solid #3498db;margin-top: 4px;">
                                            <table class="table table-bordered" id="tblReportTestCount">
                                                <thead>
                                                    <tr>
                                                        <th style='width:5%;'>S.No</th>
                                                        <th style='width:80%;'>ItemName</th>
                                                        <th style='width:20%;text-align:center'>TotalCount</th>

                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label>Observation</label>
                                        <div style="display:flex">
                                            <select id="ddlObservation" class="form-control"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <label> From</label>
                                        <div style="display:flex">
                                            <input type="date" id="txtfromdate2" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-5" style="margin-left: -8px;">
                                        <label> To</label>
                                        <div style="display:flex">
                                            <input type="date" id="txttodate2" class="form-control" />
                                            @*<button class="btn btn-success bn" id="btnget" onclick="GetAllObservation('GetReadingByObs')"><i class="fa fa-search"></i>&nbsp;Get</button>*@
                                            <button class="btn btn-warning bn" style="margin-left: 4px;width: 48%;" id="btnexecls" onclick="GetExecls('GetReadingByObs')"><i class="fa fa-file-excel-o"></i>&nbsp;Excel</button>
                                        </div>

                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="table-responsive" style="height:450px;overflow-y:auto;border:1px solid #3498db;margin-top: 4px;">
                                            <table class="table table-bordered" id="tblReport">
                                                <thead>
                                                    <tr>
                                                        <th style='width:20%;'>ItemName</th>
                                                        <th style='width:10%;text-align:center'>Mac_Reading</th>
                                                        <th style='width:10%;text-align:center'>min_value</th>
                                                        <th style='width:10%;text-align:center'>max_value</th>
                                                        <th style='width:10%;text-align:center'>Range</th>
                                                        <th style='width:10%;text-align:center'>Result_unit</th>
                                                        <th style='width:10%;text-align:center'>Method_name</th>

                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
