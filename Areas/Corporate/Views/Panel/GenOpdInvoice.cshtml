<div id="page-content">
    <div class="col-lg-12">
        <div class="row">
            <div class="ml15">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h5>Generate OPD Invoice</h5>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-4">
                                <label>Select Month</label>
                                <div style="display:flex">
                                    <input type="month" id="txtMonth" class="form-control" style="border: 1px solid #86b3de;" />
                                    <button style="height:28px;width:30%" class="btn bg-blue bn" onclick="GetList()"><i class="fa fa-search">&nbsp;</i>Get</button>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
