        margin-bottom: 2px;
    }

    #billid {
        /* border: 1px solid black; */
        width: 100%;
        color: white;
        /* background-color: #86b3de; */
        margin-top: 5px;
        margin-bottom: 1px;
        background: #2478a9;
        padding: 2px;
    }



    #btnGen {
        background-color: #ddd;
        border: none;
        color: black;
        padding: 6px 15px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 16px;
    }

        #btnGen:hover {
            background-color: lightgreen;
        }

    .btnclass {
        background-color: #ddd;
        border: none;
        color: black;
        padding: 6px 15px;
