
@{
    ViewBag.Title = "FundManagement";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/Corporate/JsModule/FundModifyExpiry.js"></script>
<style>
    #tblFundInfo tbody input[type=date] {
        border: 1px solid #b3b2b2;
        border-radius: 0;
    }

    #btnVerify {
        border: none;
        border-radius: 0;
        height: 28px;
        margin: -1px;
    }

    .loading {
        border-width: 3px;
        border-image: url(/images/loading.gif) 60
    }

    .lock {
        pointer-events: none;
        opacity: 0.5
    }

    .text-white {
        color: #fff !important;
    }

    hr {
        margin-top: 35px;
        margin-bottom: 5px;
        border: 0;
        border-top: 1px solid #eee;
    }

    .fileinput.input-group {
        display: flex;
    }

    .text-17 {
        font-size: 17px;
    }

    .scroll {
        width: 100%;
        background: #fff;
        overflow: overlay;
        max-height: 480px;
        display: block;
    }

    .panel-body {
        /*box-shadow: 1px 1px 10px #d2d2d2;*/
        border-radius: 10px;
        padding: 5px 3px 0px 3px;
        position: relative;
    }

    .ml15 {
        margin-left: 15px;
    }

    .selected {
        background: DodgerBlue !important;
        color: #fff;
    }

    .flex {
        display: flex;
        align-items: baseline;
    }

        .flex label {
            white-space: pre;
        }

    .panelInfo {
        background: #ffdbdb;
        padding: 5px 10px;
        width: 100%;
        border-radius: 2px;
        font-size: 12px;
    }
</style>
<div id="page-content">
    <div class="container">
        <div class="row">
            <div class="col-md-10 rightpanel">
                <div class="">
                    <div class="">
                        <div class="panel">
                            <div class="panel-heading" style="background:#0076d0;padding: 4px;">
                                <h4 class="text-white">Fund Management Info </h4>

                            </div>
                            <div class="panel-body" style="background:#fff;padding: 8px 20px;">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-xs-4">
                                            <div class="flex">
                                                <label>UHID : </label>
                                                <div class="flex">
                                                    <input type="text" id="txtUHID" style="border-radius: 0;border-color: #00a65a;" class="form-control" placeholder="UHID" />
                                                    <button id="btnVerify" onclick="GetFundInfo()" class="btn btn-success"><i class="fa fa-check-circle">&nbsp;</i></button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr />

                                <div class="col-md-12">
                                    <div class="table table-responsive">
                                        <div class="scroll">
                                            <table id="tblFundInfo" class="table table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th>Trn Date</th>
                                                        <th>Amount</th>
                                                        <th>Ref Detail</th>
                                                        <th>Utr No</th>
                                                        <th>Utr Date</th>
                                                        <th>Exp Date</th>
                                                        <th>CMD</th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

