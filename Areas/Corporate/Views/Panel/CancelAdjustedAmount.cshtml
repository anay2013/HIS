
@{
    ViewBag.Title = "CancelAdjustedAmount";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<script src="~/Areas/Corporate/JsModule/CancelAdjustedAmount.js"></script>
<style>
    #btnVerify {
        border: none;
        border-radius: 0;
        height: 28px;
        margin: -1px;
        width: 100px;
    }

    .loading {
        border-width: 3px;
        border-image: url(/images/loading.gif) 60
    }

    .lock {
        pointer-events: none;
        opacity: 0.5
    }

    .text-white {
        color: #fff;
        margin: 6px 5px;
    }

    hr {
        margin-top: 35px;
        margin-bottom: 5px;
        border: 0;
        border-top: 1px solid #eee;
    }

    .fileinput.input-group {
        display: flex;
    }

    .text-17 {
        font-size: 17px;
    }

    .scroll {
        width: 100%;
        background: #fff;
        overflow: overlay;
        max-height: 480px;
        display: block;
    }

    .panel-body {
        /*box-shadow: 1px 1px 10px #d2d2d2;*/
        border-radius: 10px;
        padding: 5px 3px 0px 3px;
        position: relative;
    }

    .ml15 {
        margin-left: 15px;
    }

    .selected {
        background: DodgerBlue !important;
        color: #fff;
    }

    .flex {
        display: flex;
        align-items: baseline;
    }

        .flex label {
            white-space: pre;
        }

    .panelInfo {
        background: #ffdbdb;
        padding: 5px 10px;
        width: 100%;
        border-radius: 2px;
        font-size: 12px;
    }
</style>
<div id="page-content">
    <div class="container">
        <div class="ml15">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel">
                        <div class="panel-heading" style="background:#0076d0;padding: 4px;">
                            <h5 class="text-white">Cancel Adjusted Amount</h5>

                        </div>
                        <div class="panel-body" style="background:#fff;">
                            <div class="col-md-12">
                                <div class="row" style="background-color:#bddeff;margin-bottom:5px;height:50px;padding-top:10px;margin-top:-3px;">
                                    <div class="col-xs-4">
                                        <div class="flex">
                                            <label>IPDNO : </label>
                                            <div class="flex">
                                                <input type="text" id="txtIPDNO" style="border-radius: 0;border-color: #00a65a;" class="form-control" placeholder="IPDNO" />
                                                <button id="btnVerify" onclick="GetAdjustedInfo()" class="btn btn-success"><i class="fa fa-check-circle">&nbsp;Search</i></button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-8">
                                        <div class="flex">
                                            <label>Patient Info : </label>
                                            <label style="font-size: 13px; margin-left:10px" id="PatientInfo">-</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="table table-responsive" style="border:1px solid #0083d0b8;height:450px; overflow:auto">
                                        <table id="tblFundInfo" class="table table-bordered">
                                            <thead>
                                                <tr>

                                                    <th>UHID</th>
                                                    <th>Trn Date</th>
                                                    <th>Amount</th>
                                                    <th>Ref No</th>
                                                    <th>Ref Detail</th>
                                                    <th>Utr Date</th>
                                                    <th>IsBillClosed</th>
                                                    <th>CMD</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

