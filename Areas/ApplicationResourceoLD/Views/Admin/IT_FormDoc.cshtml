
@{
    ViewBag.Title = "IT_FormDoc";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/ApplicationResource/JsModule/IT_FormDoc.js?1.1"></script>
<style>
    #selectedForm {
        background: #ddd;
        border-radius: 3px;
        padding: 5px;
        margin: -6px 0 10px 10px;
    }
    .btn-add {
        border: none;
        padding: 6px;
        margin-left: 1px;
    }

    .btn-tbl {
        border: none;
        padding: 1px 9px;
        font-size: 13px;
        margin-bottom: 2px;
    }

    .flex {
        display: flex !important;
        align-items: center;
    }

    hr {
        margin-top: 35px;
        margin-bottom: 5px;
        border: 0;
        border-top: 1px solid #eee;
    }

    .custom-table {
        width: 100%;
        line-height: 29px;
        font-size: 12px;
    }

    .fileinput.input-group {
        display: flex;
    }

    .text-17 {
        font-size: 17px;
    }

    .btn-flat {
        padding: 2px;
        border: none;
    }

    .scroll {
        width: 100%;
        background: #fff;
        overflow: overlay;
        max-height: 450px;
        display: block;
    }

    .panel-body {
        /*box-shadow: 1px 1px 10px #d2d2d2;*/
        border-radius: 10px;
        padding: 5px 3px 0px 3px;
        position: relative;
    }

    .note {
        list-style: disc;
        color: red;
        font-size: 11px;
        font-weight: bold;
        background: #f7f7f7;
        border: 1px solid #d86c6c;
    }

    .bn {
        margin: 0px;
        font-size: 10pt;
        padding: 0px 10px;
        border-radius: 0;
        text-align: left;
        height: 30px;
    }

    .bc {
        border: 1px solid #00a65a;
        border-radius: 0;
    }
</style>
<div id="page-content">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="ml151">
                    <div class="panel">
                        <div class="panel-heading" style="background:#0076d0;padding: 4px;">
                            <h4 class="text-white">IT Form Doc Master</h4>
                        </div>
                        <div class="panel-body" style="padding:10px">
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="flex">
                                        <label style="white-space:pre">Project Name : </label>
                                        <select id="ddlProject" class="form-control">
                                            <option value="-">Select</option>
                                            <option selected value="HIS">HIS</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-7 form-group">
                                    <div class="flex">
                                        <label style="white-space:pre">Form Menu : </label>
                                        <select id="ddlMenu" class="form-control"></select>
                                    </div>
                                </div>
                                <div class="col-md-12 form-group">
                                    <div class="flex">
                                        <label style="white-space:pre;width: 22%;">Form Name : </label>
                                        <input type="text" id="txtFormName" class="form-control" placeholder="Form Name" />
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <textarea rows="3" id="txtAboutForm" class="form-control" placeholder="About Form.."></textarea>
                                </div>
                                <div class="col-md-12">
                                    <button id="btnSave" style="margin-top:5px;" onclick="InsertDocMaster()" class="btn btn-success pull-right">Submit</button>
                                </div>
                                <div class="col-md-12">
                                    <div class="scroll" style="height:520px;max-height:520px;overflow:auto;border:1px solid #2492b3">
                                        <table id="tblDocMaster" class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th style="width:1%">#</th>
                                                    <th>Form Name</th>
                                                    <th style="width:1%">CMD</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-7">
                <div class="ml151">
                    <div class="panel">
                        <div class="panel-heading" style="background:#0076d0;padding: 4px;">
                            <h4 class="text-white"><button onclick="Clear()" class="btn btn-warning btn-xs">New</button>IT Form Doc Info</h4>
                        </div>
                        <div class="panel-body" style="padding:10px">
                            <div class="row">
                                <label class="col-md-11" id="selectedForm">Form Info : </label>
                                <div class="col-md-9">
                                    <div class="flex">
                                        <label style="white-space:pre">Heading : </label>
                                        <select id="ddlHeading" class="form-control" style="border-radius:0;border-color:#d86c6c"></select>
                                        <button id="btnSave" style="border-radius:0;margin:0;height:28px;width:22%" onclick="$('#modalGroup').modal('show')" class="btn btn-warning pull-right"><i class="fa fa-sign-in">&nbsp;</i>Save</button>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <label>Points</label>
                                    <textarea rows="3" id="txtTextContent" placeholder="Points.." class="form-control"></textarea>
                                </div>
                                <div class="col-md-12">
                                    <button id="btnSave" style="margin-top:5px;" onclick="InsertDocInfo()" class="btn btn-success pull-right">Submit</button>
                                </div>
                                <div class="col-md-12">
                                    <div class="scroll" style="height:520px;max-height:520px;overflow:auto;border:1px solid #2492b3">
                                        <table id="tblDocInfo" class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th style="width:1%">#</th>
                                                    <th>Text Content</th>
                                                    <th style="width:1%">cmd</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modalGroup" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="bg-success" style="padding: 5px 10px;color: #fff;background:#0076d0">
                <h4 class="modal-title">
                    Group Master
                    <button type="button" class="close pull-right" data-dismiss="modal">&times;</button>
                </h4>
            </div>
            <div class="modal-body">
                <div class="row">                
                    <div class="col-md-12 form-group">
                        <label>Group Name</label>
                        <div class="flex">
                            <input type="text" id="txtGroupName" class="form-control bc" placeholder="Group Name" />
                            <button id="btnSaveGroup" style="width: 23%;height: 28px;" class="btn-success btn-add bn" onclick="InsertDocGroup()">Submit</button>
                        </div>
                    </div>              
                </div>
            </div>
        </div>
    </div>
</div>
