
@{
    ViewBag.Title = "NABHReport";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/ApplicationResource/JsModule/NABHReport.js"></script>
<style>
    .flex {
        display: flex !important;
        align-items: center;
    }

    .panel-body {
        padding: 4px 5px;
        position: relative;
    }


    hr {
        margin-top: 8px;
        margin-bottom: 5px;
        border: 0;
        border-top: 1px solid #eee;
    }

    .bn {
        margin: 0px;
        font-size: 10pt;
        padding: 0px 10px;
        border-radius: 0;
        text-align: left;
        height: 28px;
    }

    .text-white {
        color: #fff;
        margin: 1px 0px;
    }

    #tblReport thead th {
        padding: 3px;
    }

    #tblReport tbody td {
        padding: 3px;
        font-size: 12px;
    }
</style>
