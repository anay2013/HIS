
@{
    ViewBag.Title = "AuditSaleVoucher";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/Accounts/JsModule/AuditSaleVoucher.js"></script>
<style>

    .panel {
        margin-bottom: 2px !important;
        margin-left: 2px !important;
    }

    .panel-heading {
        padding: 1px 5px;
    }

    .panel-body {
        padding: 2px 1px;
        margin-top: 1px;
    }


    #tblSaleVoucher thead th {
        color: #fff;
        background: #2478a9;
        font-size: 12px;
        font-weight: bold;
        padding-right: 3px;
        text-align: center;
    }

    #tblSaleVoucher tbody td {
        font-size: 14px;
        font-weight: bold;
        padding-right: 10px;
        text-align: center;
    }

    .row.colnospace [class*='col-'] {
        padding-right: 2px;
        padding-left: 2px;
    }

    .nav-tabs a {
        background: #e8e8e8;
    }

    .tab-pane {
        padding: 2px;
    }

    .btn {
        border: none;
        padding: 1px 9px;
        font-size: 13px;
        margin-bottom: 2px;
    }

    .navigation div[class*=col-md-3] {
        width: 25%;
        /*//padding: 2px;*/
    }

    /*.navigation div[class*=col-md-3] {
        width: 38%;
       padding: 2px;
    }*/

    .navigation input {
        padding: 1px;
    }

    .bn {
        margin: 0px;
        font-size: 10pt;
        padding: 0px 12px;
        border-radius: 0;
        height: 32px;
        /*margin-top: 11%;*/
    }
