<div id="page-content">
    <div class="container">
        <div class="ml15">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h5>Audit Sale Voucher</h5>
                </div>
                <div class="panel-body">

                    <div class="row navigation" style="margin-left: -2px;">
                        <div class="col-md-3">
                            From
                            <input type="date" id="txtfromdate" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            To
                            <input type="date" id="txttodate" class="form-control" />
                        </div>

                        <div class="col-md-3">
                            <div style="display:flex">
                                <button id="btnGet" style="width:25%;height: 28px; margin-left:8px;margin-top:7%" class="btn btn-warning bn" onclick="GetDataAllBind()"><i class="fa fa-sign-in">&nbsp;</i>Get</button>
                                <button id="btnExecl" style="width:25%; height: 28px;margin-left:8px;margin-top:7%" class="btn btn-success bn" onclick="DownloadExcelAuditSale()"><i class="fa fa-file-excel-o">&nbsp;</i>Excel</button>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="panel-body">
                    <div class="row colnospace">
                        <div class="scroll" style="margin-bottom: 5px;overflow:auto;border: 1px solid #2478a9;margin-left:18px;  margin-right:18px;">
                            <table id="tblSaleVoucher" class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th colspan="2">-</th>
                                        <th colspan="4">IPD Sales</th>
                                        <th colspan="2">OPD Sales</th>
                                        <th colspan="6">-</th>

                                    </tr>
                                    <tr>
                                        <th>Date</th>
                                        <th>Total Sales</th>

                                        <th>Cash Sales</th>
                                        <th>Credit Sales</th>
                                        <th>Receivable</th>
                                        <th>Copay</th>

                                        <th>Cash Sales</th>
                                        <th>CreditSales</th>

                                        <th>Cash Sales</th>
                                        <th>Neft Amount</th>
                                        <th>Swipe Card Amt</th>
                                        <th>Vch Amount</th>
                                        <th>Audit Total Sales1</th>
                                        <th>Audit Total Sales2</th>

                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

