
@{
    ViewBag.Title = "PrescribedData";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/EDP/JsModule/PrescribedData.js"></script>
<style>

    .flex {
        display: flex !important;
        align-items: center;
    }

    hr {
        margin-top: 20px;
        margin-bottom: 5px;
        border: 0;
        border-top: 1px solid #eee;
    }

    .fileinput.input-group {
        display: flex;
    }

    .text-17 {
        font-size: 17px;
    }

    .panel-body {
        /*box-shadow: 1px 1px 10px #d2d2d2;*/
        border-radius: 10px;
        padding: 5px 3px 0px 3px;
        position: relative;
    }

    .ml15 {
        margin-left: 15px;
    }

    .navigation div[class*=col-md-2] {
        width: 10%;
        padding: 2px;
    }

    .navigation div[class*=col-md-4] {
        width: 38%;
        padding: 2px;
    }

    .navigation input {
        padding: 3px;
    }

    #tblReport thead th {
        padding: 4px;
    }

    #tblReport tbody td {
        padding: 5px;
    }

    .panel-heading {
        padding: 1px 5px;
    }
</style>
<div id="page-content">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="ml15">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h5>Doctor List</h5>
                        </div>
                    </div>
                    <div class="panel panel-primary" style="margin-top:-20px">
                        <div class="panel-body">

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="table-responsive" style="height:500px;overflow-y:auto;border:1px solid #3498db;margin-top:5px;">
                                        <table id="tblDoctorsList" class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th style="width:20%;">Doctor Id</th>
                                                    <th><input type="text" class="form-control" placeholder="Doctor Name" style="margin-bottom: 2px; height: 20px;" id="txtdoc" /></th>
                                                    <th style="width:10%">Cmd</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>

                                        </table>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-7">
                <div class="ml15">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h5>Prescribed Data</h5>
                        </div>
                    </div>
                    <div class="panel panel-primary" style="margin-top:-20px">
                        <div class="panel-body">
                            <div class="row" style="background-color:#d8f7db;padding:10px 0px;margin-left:0px;margin-right:0px">
                                <div class="col-md-12">
                                    <table>
                                        <tr>
                                            <td style="width:15%"><b>Doctor Id.</b></td>
                                            <td style="width:3%"><b>:</b></td>
                                            <td id="txtdoctorid" style="width:32%"></td>
                                            <td>&nbsp;</td>
                                            <td style="width:15%"><b>Doctor Name</b></td>
                                            <td style="width:3%"><b>:</b></td>
                                            <td id="txtDoctorName" style="width:32%"></td>
                                            <td>&nbsp;</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <hr style=" margin-top: 10px;" />
                            <div class="row">
                                <div class="col-md-5">
                                    <label>From Date</label>
                                    <input type="date" id="txtSearchFrom" class="form-control" placeholder="from : dd-mm-yyyy" />
                                </div>
                                <div class="col-md-7">
                                    <label>To Date</label>
                                    <div style="display:flex">
                                        <input type="date" id="txtSearchTo" class="form-control" placeholder="to : dd-mm-yyyy" />
                                        <button id="btnAll" style="width:50%;height:27px" onclick="ExeclReport()" class="btn btn-success">Download</button>
                                    </div>
                                </div>
                            </div>
                            <hr />
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

