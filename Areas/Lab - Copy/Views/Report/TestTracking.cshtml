<div id="page-content">
    <div class="container">
        <div class="ml15">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel">
                        <div class="panel-heading" style="background:#2478a9;padding:1px 10px; ">
                            <p class="text-white">Test Tracking Report</p>
                        </div>
                        <div class="panel-body" style="background:#fff;padding:7px">

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="fileinput fileinput-new input-group" style="display:flex;align-items: baseline;">
                                        <input type="text" class="form-control" id="txtVisitNo" placeholder="Visit No" />
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="fileinput fileinput-new input-group" data-provides="fileinput" style="display:inline-flex;align-items: baseline;">

                                        <button class="btn-success" onclick="VisitNoBySearchdata()" style="width:30%;border:none;height:27px"><i class="fa fa-search">&nbsp;</i>Search</button>
                                    </div>
                                </div>
                            </div>
                            <div class="row" style="margin:0px; background:#e6f4ff;padding: 5px;margin-bottom: 5px;">
                                <div class="row">
                                    <div class="col-md-12">
                                        <table style="width:100%">
                                            <tr>
                                                <td style="text-align:left;white-space:pre"><b>Visit No:</b></td>
                                                <td style="text-align:left;"><span id="_txtVisitNo" style="margin-left:50px"></span></td>
                                                <td style="text-align:left;white-space:pre"><b>Patient Name :</b></td>
                                                <td style="text-align:left"><span id="_txtPatientName" style="margin-left:50px"></span></td>
                                            </tr>
                                            <tr>
                                                <td style="text-align:left;white-space:pre"><b>Age:</b></td>
                                                <td style="text-align:left"><span id="_txtAge" style="margin-left:50px"></span></td>
                                                <td style="text-align:left;white-space:pre"><b>Gender:</b></td>
                                                <td style="text-align:left"><span id="_txtGender" style="margin-left:50px"></span></td>
                                            </tr>


                                        </table>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="panel-heading" style="background:#2478a9;padding:1px 10px;">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <p class="text-white">Record Tracking Report</p>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="scroll" style="display:block; border:1px solid #2478a9;padding-bottom:7px;">
                                                <div class="table table-responsive">
                                                    <div class="outer">
                                                        <div class="inner">
                                                            <table class="table table-bordered" id="tblTestTrackingReport">
                                                                <thead>
                                                                    <tr>
                                                                        <th class="hard_left">IPOPType</th>
                                                                        <th class="next_left">BarCodeNo</th>
                                                                        <th class="next_left" style="margin-left:120px">RegDate</th>
                                                                        <th class="next_left" style="margin-left:240px">Item_Code</th>
                                                                        <th class="next_left" style="margin-left:360px;">Item_Name</th>
                                                                        <th class="next_left" style="margin-left:480px">Test_Category</th>
                                                                        <th>Samplecode</th>
