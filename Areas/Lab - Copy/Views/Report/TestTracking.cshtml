

@{
    ViewBag.Title = "TestTracking";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/Lab/JsModule/Report/TestTracking.js"></script>
<style>
    .select-row {
        background: #0076d0 !important;
        color: #fff;
    }

    /*.scroll {
        overflow: auto;
        max-height: 500px;
    }*/

    .sampleTaken {
        background: #bcffe0
    }

    .panel-body input, .panel-body select {
        padding: 5px !important;
    }

    div.dataTables_wrapper {
        width: 800px;
        margin: 0 auto;
    }

    #tblTestTrackingReport {
        table-layout: fixed;
        width: 100%;
        *margin-left: -100px; /*ie7*/
    }

        #tblTestTrackingReport td, th {
            /*vertical-align: top;
            border-top: 1px solid #ccc;
