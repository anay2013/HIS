                                                                        <th>Lab_Received_By</th>
                                                                        <th>max_reptime</th>
                                                                        <th>Delivary_Time</th>
                                                                        <th>Approved_Date</th>
                                                                        <th>Approve_By</th>
                                                                        <th>Sample_Required</th>
                                                                        <th>Local_Test</th>
                                                                        <th>Cancelled</th>
                                                                        <th>R_type</th>
                                                                        <th>InOut_Status</th>

                                                                    </tr>
                                                                </thead>
                                                                <tbody></tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
